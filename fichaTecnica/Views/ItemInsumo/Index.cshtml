@model IEnumerable<fichaTecnica.Models.ItemInsumo>
@{
    ViewData["Title"] = "Insumos";
}


<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <p class="mb-2">
                <a asp-action="Cadastrar" class="btn btn-primary float-right">Adicionar Insumos</a>
            </p>

            <table class="table table-hover table-click">
                <thead>
                    <tr>
                        <th>Descrição</th>
                        <th>Quantidade</th>
                        <th>Tipo de unidade de medida</th>
                        <th>Custo unitário</th>
                        <th>Custo total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr>
                        <td>
                            <a asp-action="Detalhes" asp-route-id="@item.Id">
                                @item.DescricaoItemInsumo
                            </a>
                        </td>
                        <td>@item.Quantidade</td>
                        <td>@item.TipoDeUnidadeDeMedida</td>
                        <td>@item.CustoUnitario</td>
                        <td>@item.CustoTotal</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
