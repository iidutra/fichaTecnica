@model fichaTecnica.Models.ItemInsumo

@{
    ViewData["Title"] = "Detalhes dos Ingredientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-click">
                <thead>
                    <tr>
                        <th>Descrição</th>
                        <th>Quantidade</th>
                        <th>Tipo de medida</th>
                        <th>Custo unitário</th>
                        <th>Custo Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Model.DescricaoItemInsumo
                        </td>
                        <td>
                            @Model.Quantidade
                        </td>
                        <td>
                            @Model.TipoDeUnidadeDeMedida
                        </td>
                        <td>
                            @Model.CustoUnitario
                        </td> 
                        <td>
                            @Model.CustoTotal
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <p class="mb-2">
            <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary float-left">Editar</a>
        </p>
    </div>
</div>
