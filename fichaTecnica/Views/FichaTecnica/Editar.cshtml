@model fichaTecnica.Historias.CabecalhoDaFicha.Editar.EditarCabecalhoDaFichaViewModel
@{
    ViewData["Title"] = "Editar Cabeçalho da ficha técnica";
}


<h2>Editar</h2>
<h4>Ficha técnica</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label" asp-for="DescricaoDaFichaTecnica"></label>
                <input asp-for="DescricaoDaFichaTecnica" class="form-control" />
                <span asp-validation-for="DescricaoDaFichaTecnica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Categoria"></label>
                <input asp-for="Categoria" class="form-control" />
                <span class="text-danger" asp-validation-for="Categoria"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="RendimentoDaPorcao"></label>
                <input asp-for="RendimentoDaPorcao" class="form-control" />
                <span class="text-danger" asp-validation-for="RendimentoDaPorcao"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-inverse"><em class="mdi mdi-close"></em> Cancelar</a>
            </div>
        </form>
    </div>
</div>

