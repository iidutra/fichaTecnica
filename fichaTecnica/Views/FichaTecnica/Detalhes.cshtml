@model fichaTecnica.Models.FichaTecnica

@{
    ViewData["Title"] = "Detalhes do Cabeçalho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-click">
                <thead>
                    <tr>
                        <th>Descrição</th>
                        <th>Categoria</th>
                        <th>Rendimento Por Porção</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Model.DescricaoDaFichaTecnica
                        </td>
                        <td>
                            @Model.Categoria
                        </td>
                        <td>
                            @Model.RendimentoDaPorcao
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <p class="mb-2">
            <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary float-left">Editar</a>
        </p>
    </div>
</div>
