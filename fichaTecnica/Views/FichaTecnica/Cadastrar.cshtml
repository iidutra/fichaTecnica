@model fichaTecnica.Historias.CabecalhoDaFicha.Cadastrar.CriarFichaTecnicaViewModel
@{
    ViewData["Title"] = "Cadastrar Cabeçalho da ficha técnica";
}

<div class="card">
    <div class="card-body">
        <form asp-action="Cadastrar">
            <div class="form-group">
                <label asp-for="DescricaoDaFichaTecnica" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <em class="mdi mdi-note-text-outline"></em> </span>
                    </div>
                    <input asp-for="DescricaoDaFichaTecnica" class="form-control" />
                </div>
                <span asp-validation-for="DescricaoDaFichaTecnica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <em class="mdi mdi-cog-outline"></em> </span>
                    </div>
                    <input asp-for="Categoria" class="form-control" />
                </div>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RendimentoDaPorcao" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <em class="mdi mdi-cog-outline"></em> </span>
                    </div>
                    <input asp-for="RendimentoDaPorcao" class="form-control" />
                </div>
                <span asp-validation-for="RendimentoDaPorcao" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success"><em class="mdi mdi-check"></em> Salvar</button>
                <a asp-action="Index" class="btn btn-outline-inverse"><em class="mdi mdi-close"></em> Cancelar</a>
            </div>
        </form>
    </div>
</div>
